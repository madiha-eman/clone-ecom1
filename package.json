    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "http-proxy-middleware": "^1.0.6",
    "jsonwebtoken": "^8.5.1",
